<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp">

    <ImageView
        android:id="@+id/imgPhoto"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:scaleType="centerCrop"
        android:src="@drawable/gym1"
        android:contentDescription="Habit photo" />

    <!-- Overlay info -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#66000000"
        android:padding="6dp"
        android:layout_gravity="bottom">

        <TextView
            android:id="@+id/tvFriend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Maverick"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="13sp"/>

        <TextView
            android:id="@+id/tvHabit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Drinking Water"
            android:textColor="#FFFFFF"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/tvStreak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20-day streak"
            android:textColor="#FFD700"
            android:textSize="12sp"
            android:textStyle="bold"/>
    </LinearLayout>
</FrameLayout>
