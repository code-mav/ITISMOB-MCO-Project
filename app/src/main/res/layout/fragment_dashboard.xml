<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dashboard"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginBottom="24dp"/>

        <!-- Streak Image -->
        <ImageView
            android:id="@+id/streakPlaceholderIv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_streak"
            android:contentDescription="@string/streak_placeholder"
            android:layout_marginBottom="16dp"
            android:scaleType="centerInside" />

        <!-- Stats Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#EEEEEE"
            android:padding="16dp"
            android:layout_marginBottom="24dp"
            android:gravity="center_horizontal"
            android:elevation="1dp">

            <TextView
                android:id="@+id/totalStreaks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/total_streaks_10"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/completionRate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/completion_rate_85"
                android:textSize="18sp"
                android:textColor="#555555"/>
        </LinearLayout>

        <!-- Toggles -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/toggleDailySwitch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/toggle_daily_reminders"
                android:textSize="16sp"
                android:textColor="#333333"
                android:checked="true"
                android:layout_marginBottom="12dp" />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/toggleStreakSwitch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/toggle_streak_warnings"
                android:textSize="16sp"
                android:textColor="#333333"
                android:checked="false" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
