<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <!-- Existing Scrollable Home Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- Placeholder Logo -->
            <ImageView
                android:id="@+id/logoIv"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="32dp"
                android:src="@drawable/snapbit"
                android:contentDescription="@string/app_logo"
                android:scaleType="fitCenter" />

            <!-- App Title -->
            <TextView
                android:id="@+id/appTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/title"
                android:textSize="28sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="0dp" />

            <TextView
                android:id="@+id/appSubtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/subtitle"
                android:textSize="18sp"
                android:gravity="center"
                android:textColor="#666666"
                android:layout_marginTop="-17dp"
                android:layout_marginBottom="50dp" />

            <!-- Habit Cards -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="24dp">

                <!-- Habit 1 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/habit_box_bg"
                    android:padding="16dp"
                    android:layout_marginBottom="12dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/habit1Icon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_streak"
                        android:layout_marginEnd="8dp"
                        android:adjustViewBounds="true" />

                    <TextView
                        android:id="@+id/habit1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/habit2"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#333333" />
                </LinearLayout>

                <!-- Habit 2 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/habit_box_bg"
                    android:padding="16dp"
                    android:layout_marginBottom="12dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/habit2Icon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_streak"
                        android:layout_marginEnd="8dp"
                        android:adjustViewBounds="true" />

                    <TextView
                        android:id="@+id/habit2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/habit1"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#333333" />
                </LinearLayout>
            </LinearLayout>

            <!-- Buttons -->
            <Button
                android:id="@+id/createHabitBtn"
                android:layout_width="200dp"
                android:layout_height="54dp"
                android:text="@string/create_habit"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:backgroundTint="?attr/colorPrimary"
                android:textColor="@android:color/white"
                android:elevation="2dp" />

            <Button
                android:id="@+id/submitProofBtn"
                android:layout_width="200dp"
                android:layout_height="54dp"
                android:layout_marginTop="12dp"
                android:text="@string/submit_proof"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:backgroundTint="@android:color/darker_gray"
                android:textColor="@android:color/white"
                android:elevation="2dp" />
        </LinearLayout>
    </ScrollView>

    <!-- Floating Tutorial Button -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/infoFab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="110dp"
        android:contentDescription="About SnapBit"
        android:src="@android:drawable/ic_menu_info_details"
        app:backgroundTint="?attr/colorPrimary"
        app:tint="@android:color/white"
        android:elevation="6dp"
        android:layout_gravity="bottom|end" />

</FrameLayout>
